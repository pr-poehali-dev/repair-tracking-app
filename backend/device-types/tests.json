{
  "tests": [
    {
      "name": "Get all device types",
      "method": "GET",
      "path": "/",
      "expectedStatus": 200,
      "bodyMatcher": "type"
    },
    {
      "name": "Get device types by category",
      "method": "GET",
      "path": "/?category=Электроника",
      "expectedStatus": 200,
      "bodyMatcher": "type"
    },
    {
      "name": "Add device type as director",
      "method": "POST",
      "path": "/",
      "headers": {
        "X-User-Role": "director"
      },
      "body": {
        "name": "Тестовое устройство",
        "category": "Тестовая категория"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "name": "Тестовое устройство"
      },
      "bodyMatcher": "partial"
    }
  ]
}